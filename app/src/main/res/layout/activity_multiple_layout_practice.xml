<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MultipleLayoutPractice"
    android:orientation="vertical"
    android:weightSum="3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:weightSum="3">
        <TextView
            android:layout_weight="1"
            android:gravity="center"
            android:text="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#ff0000"/>
        <TextView
            android:gravity="center"
            android:text="2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#26ff00"/>
        <TextView
            android:gravity="center"
            android:text="3"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#006aff"/>
    </LinearLayout>
    <FrameLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:background="#fcf9f9"
        android:layout_height="0dp">

        <TextView
            android:gravity="center"
            android:text="1"
            android:layout_gravity="center"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:background="#f10606"/>
        <TextView
            android:gravity="center"
            android:text="2"
            android:layout_gravity="center"
            android:layout_marginBottom="60dp"
            android:layout_marginLeft="60dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#0ef106"/>
        <TextView
            android:gravity="center"
            android:text="3"
            android:layout_gravity="center"
            android:layout_marginBottom="-60dp"
            android:layout_marginLeft="-60dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#061ef1"/>

    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:weightSum="3">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="1"
            android:gravity="center"
            android:background="#ff001e"/>
        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="2"
            android:background="#2fff00"/>
        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="3"
            android:background="#006aff"/>
    </LinearLayout>


</LinearLayout>